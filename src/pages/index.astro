<style is:global>
	/* Variables globales */
	:root {
		--primary: #6366f1;
		--primary-dark: #4f46e5;
		--dark: #1e293b;
		--light: #f8fafc;
		--gray: #94a3b8;
		--transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.1);
	}

	/* Reset y estilos base */
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
		scroll-behavior: smooth;
	}

	body {
		font-family: "Inter", sans-serif;
		background-color: #0f172a;
		color: var(--light);
		line-height: 1.6;
		overflow-x: hidden;
	}

	/* Animaciones clave */
	@keyframes fadeIn {
		from {
			opacity: 0;
			transform: translateY(20px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	@keyframes float {
		0%,
		100% {
			transform: translateY(0);
		}
		50% {
			transform: translateY(-10px);
		}
	}

	@keyframes gradientShift {
		0% {
			background-position: 0% 50%;
		}
		50% {
			background-position: 100% 50%;
		}
		100% {
			background-position: 0% 50%;
		}
	}

	@keyframes typing {
		from {
			width: 0;
		}
		to {
			width: 100%;
		}
	}

	@keyframes blinkCaret {
		from,
		to {
			border-color: transparent;
		}
		50% {
			border-color: var(--primary);
		}
	}

	/* Utilidades */
	.animate-fadeIn {
		animation: fadeIn 0.8s ease-out forwards;
		opacity: 0;
	}

	.animate-float {
		animation: float 3s ease-in-out infinite;
	}

	.delay-100 {
		animation-delay: 0.1s;
	}
	.delay-200 {
		animation-delay: 0.2s;
	}
	.delay-300 {
		animation-delay: 0.3s;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 2rem;
	}

	.section {
		padding: 8rem 0;
	}

	.section-title {
		font-size: 2.5rem;
		font-weight: 700;
		margin-bottom: 3rem;
		position: relative;
		display: inline-block;
	}

	.section-title::after {
		content: "";
		position: absolute;
		bottom: -10px;
		left: 0;
		width: 50%;
		height: 4px;
		background: var(--primary);
		border-radius: 2px;
	}

	/* Fondo con efecto de partículas */
	.particles-bg {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: -1;
		background: radial-gradient(circle at center, #1e3a8a 0%, #0f172a 100%);
		overflow: hidden;
	}

	.particle {
		position: absolute;
		border-radius: 50%;
		background: rgba(99, 102, 241, 0.2);
	}

	/* Botones */
	.btn {
		display: inline-block;
		padding: 0.8rem 2rem;
		background: var(--primary);
		color: white;
		border-radius: 50px;
		text-decoration: none;
		font-weight: 500;
		transition: var(--transition);
		border: 2px solid var(--primary);
		position: relative;
		overflow: hidden;
		z-index: 1;
	}

	.btn::before {
		content: "";
		position: absolute;
		top: 0;
		left: 0;
		width: 0%;
		height: 100%;
		background: var(--dark);
		transition: var(--transition);
		z-index: -1;
	}

	.btn:hover::before {
		width: 100%;
	}

	.btn:hover {
		color: var(--primary);
		border-color: var(--primary);
	}

	/* Tarjetas de proyectos */
	.project-card {
		border-radius: 16px;
		overflow: hidden;
		background: rgba(15, 23, 42, 0.6);
		backdrop-filter: blur(10px);
		border: 1px solid rgba(99, 102, 241, 0.2);
		transition: var(--transition);
		position: relative;
		height: 100%;
	}

	.project-card:hover {
		transform: translateY(-10px);
		border-color: var(--primary);
		box-shadow: 0 20px 30px rgba(99, 102, 241, 0.2);
	}

	.project-image {
		height: 250px;
		overflow: hidden;
		position: relative;
	}

	.project-image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		transition: var(--transition);
	}

	.project-card:hover .project-image img {
		transform: scale(1.1);
	}

	.project-content {
		padding: 1.5rem;
	}

	.project-title {
		font-size: 1.5rem;
		font-weight: 700;
		margin-bottom: 1rem;
	}

	.project-description {
		color: var(--gray);
		margin-bottom: 1.5rem;
	}

	.project-technologies {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
		margin-top: 1rem;
	}

	.tech-badge {
		background: rgba(99, 102, 241, 0.1);
		color: var(--primary);
		padding: 0.3rem 0.8rem;
		border-radius: 50px;
		font-size: 0.85rem;
		border: 1px solid var(--primary);
	}

	/* Timeline de experiencia */
	.timeline {
		position: relative;
		padding-left: 30px;
	}

	.timeline::before {
		content: "";
		position: absolute;
		left: 7px;
		top: 5px;
		height: 95%;
		width: 2px;
		background: var(--primary);
	}

	.timeline-item {
		position: relative;
		margin-bottom: 2.5rem;
	}

	.timeline-item::before {
		content: "";
		position: absolute;
		left: -30px;
		top: 5px;
		width: 16px;
		height: 16px;
		border-radius: 50%;
		background: var(--primary);
		border: 3px solid var(--dark);
	}

	.timeline-period {
		font-weight: 600;
		color: var(--primary);
		margin-bottom: 0.5rem;
	}

	.timeline-position {
		font-size: 1.25rem;
		font-weight: 700;
		margin-bottom: 0.75rem;
	}

	/* Formulario de contacto */
	.contact-form .form-group {
		margin-bottom: 1.5rem;
		position: relative;
	}

	.contact-form input,
	.contact-form textarea {
		width: 100%;
		padding: 1rem;
		background: rgba(15, 23, 42, 0.5);
		border: 1px solid rgba(99, 102, 241, 0.2);
		border-radius: 8px;
		color: var(--light);
		font-size: 1rem;
		transition: var(--transition);
	}

	.contact-form input:focus,
	.contact-form textarea:focus {
		outline: none;
		border-color: var(--primary);
		box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.2);
	}

	.contact-form label {
		position: absolute;
		top: 1rem;
		left: 1rem;
		color: var(--gray);
		pointer-events: none;
		transition: var(--transition);
	}

	.contact-form input:focus + label,
	.contact-form input:not(:placeholder-shown) + label,
	.contact-form textarea:focus + label,
	.contact-form textarea:not(:placeholder-shown) + label {
		top: -0.8rem;
		left: 0.5rem;
		font-size: 0.8rem;
		background: var(--dark);
		padding: 0 0.5rem;
		color: var(--primary);
	}

	/* Estilos para la nueva sección de otros proyectos */
	.other-projects-section {
		padding: 5rem 0;
		background: rgba(15, 23, 42, 0.3);
	}

	.other-projects-title {
		font-size: 2rem;
		font-weight: 700;
		margin-bottom: 2rem;
		position: relative;
		display: inline-block;
	}

	.other-projects-title::after {
		content: "";
		position: absolute;
		bottom: -8px;
		left: 0;
		width: 40%;
		height: 3px;
		background: var(--primary);
		border-radius: 2px;
	}

	.other-projects-container {
		display: flex;
		overflow-x: auto;
		gap: 1.5rem;
		padding: 1rem 0;
		scrollbar-width: thin;
		scrollbar-color: var(--primary) rgba(15, 23, 42, 0.3);
	}

	.other-projects-container::-webkit-scrollbar {
		height: 8px;
	}

	.other-projects-container::-webkit-scrollbar-track {
		background: rgba(15, 23, 42, 0.3);
		border-radius: 4px;
	}

	.other-projects-container::-webkit-scrollbar-thumb {
		background: var(--primary);
		border-radius: 4px;
	}

	.other-project-card {
		flex: 0 0 280px;
		border-radius: 12px;
		overflow: hidden;
		background: rgba(15, 23, 42, 0.6);
		backdrop-filter: blur(10px);
		border: 1px solid rgba(99, 102, 241, 0.2);
		transition: var(--transition);
		position: relative;
		height: 280px;
		display: flex;
		flex-direction: column;
	}

	.other-project-card:hover {
		transform: translateY(-5px);
		border-color: var(--primary);
		box-shadow: 0 10px 20px rgba(99, 102, 241, 0.2);
	}

	.other-project-image {
		height: 140px;
		overflow: hidden;
		position: relative;
		background: linear-gradient(135deg, #1e3a8a 0%, #0f172a 100%);
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.other-project-image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		transition: var(--transition);
	}

	.other-project-card:hover .other-project-image img {
		transform: scale(1.05);
	}

	.other-project-content {
		padding: 1rem;
		flex: 1;
		display: flex;
		flex-direction: column;
	}

	.other-project-title {
		font-size: 1.1rem;
		font-weight: 700;
		margin-bottom: 0.5rem;
		color: var(--light);
	}

	.other-project-technologies {
		display: flex;
		flex-wrap: wrap;
		gap: 0.4rem;
		margin-top: auto;
	}

	.other-tech-badge {
		background: rgba(99, 102, 241, 0.1);
		color: var(--primary);
		padding: 0.2rem 0.6rem;
		border-radius: 50px;
		font-size: 0.7rem;
		border: 1px solid var(--primary);
	}

	.other-project-link {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: 2;
	}

	.github-icon {
		position: absolute;
		top: 10px;
		right: 10px;
		color: white;
		background: rgba(0, 0, 0, 0.5);
		border-radius: 50%;
		padding: 5px;
		z-index: 3;
		transition: var(--transition);
	}

	.other-project-card:hover .github-icon {
		background: var(--primary);
	}

	/* Nuevos estilos para SVG personalizados */
	.project-svg {
		width: 100%;
		height: 100%;
		border-radius: 12px;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.project-svg-content {
		width: 80%;
		height: 80%;
	}
