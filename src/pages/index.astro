---
// src/pages/index.astro
import Footer from "../components/Footer.astro";
import Navbar from "../components/NavBar.astro";
import Layout from "../layouts/Layout.astro";

// Datos de proyectos
const PROJECTS = [
	{
		title: "Mechanic Workshop Booking System",
		urlImg: "/Turnos -Taller Mecánica.png",
		description:
			"Sistema de gestión de citas para talleres mecánicos con roles de usuario y confirmaciones automáticas por email.",
		link: "https://shift-application-1iwg.vercel.app",
		technologies: ["React", "Node.js", "PostgreSQL", "TypeScript"],
	},
	{
		title: "Rick and Morty APP",
		urlImg: "/image.png",
		description:
			"Exploración de personajes mediante API con vista detallada y formulario de acceso.",
		link: "https://rick-and-morty-project-zeta-one.vercel.app",
		technologies: ["React", "API Integration", "JavaScript"],
	},
	{
		title: "Movie Search App",
		urlImg: "/project2(2).jpg",
		description:
			"Buscador de películas con detalles de sinopsis y año de lanzamiento.",
		link: "https://movie-search-app-ffeh.vercel.app",
		technologies: ["React", "API Integration", "CSS3"],
	},
];

// Datos de experiencia
const EXPERIENCE = [
	{
		period: "2023 - Presente",
		position: "Desarrollador Full Stack Freelance",
		description:
			"Desarrollo de aplicaciones web personalizadas para diversos clientes, implementando soluciones escalables y mantenibles.",
	},
	{
		period: "2022 - 2023",
		position: "Desarrollador Frontend en The Next Page",
		description:
			"Implementación de e-commerce para venta de libros con integración de Mercado Pago y envío de emails con Nodemailer.",
	},
];
---

<style is:global>
	/* Variables globales */
	:root {
		--primary: #6366f1;
		--primary-dark: #4f46e5;
		--dark: #1e293b;
		--light: #f8fafc;
		--gray: #94a3b8;
		--transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.1);
	}

	/* Reset y estilos base */
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
		scroll-behavior: smooth;
	}

	body {
		font-family: "Inter", sans-serif;
		background-color: #0f172a;
		color: var(--light);
		line-height: 1.6;
		overflow-x: hidden;
	}

	/* Animaciones clave */
	@keyframes fadeIn {
		from {
			opacity: 0;
			transform: translateY(20px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	@keyframes float {
		0%,
		100% {
			transform: translateY(0);
		}
		50% {
			transform: translateY(-10px);
		}
	}

	@keyframes gradientShift {
		0% {
			background-position: 0% 50%;
		}
		50% {
			background-position: 100% 50%;
		}
		100% {
			background-position: 0% 50%;
		}
	}

	@keyframes typing {
		from {
			width: 0;
		}
		to {
			width: 100%;
		}
	}

	@keyframes blinkCaret {
		from,
		to {
			border-color: transparent;
		}
		50% {
			border-color: var(--primary);
		}
	}

	/* Utilidades */
	.animate-fadeIn {
		animation: fadeIn 0.8s ease-out forwards;
		opacity: 0;
	}

	.animate-float {
		animation: float 3s ease-in-out infinite;
	}

	.delay-100 {
		animation-delay: 0.1s;
	}
	.delay-200 {
		animation-delay: 0.2s;
	}
	.delay-300 {
		animation-delay: 0.3s;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 2rem;
	}

	.section {
		padding: 8rem 0;
	}

	.section-title {
		font-size: 2.5rem;
		font-weight: 700;
		margin-bottom: 3rem;
		position: relative;
		display: inline-block;
	}

	.section-title::after {
		content: "";
		position: absolute;
		bottom: -10px;
		left: 0;
		width: 50%;
		height: 4px;
		background: var(--primary);
		border-radius: 2px;
	}

	/* Fondo con efecto de partículas */
	.particles-bg {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: -1;
		background: radial-gradient(circle at center, #1e3a8a 0%, #0f172a 100%);
		overflow: hidden;
	}

	.particle {
		position: absolute;
		border-radius: 50%;
		background: rgba(99, 102, 241, 0.2);
		animation: float 15s infinite linear;
	}

	/* Botones */
	.btn {
		display: inline-block;
		padding: 0.8rem 2rem;
		background: var(--primary);
		color: white;
		border-radius: 50px;
		text-decoration: none;
		font-weight: 500;
		transition: var(--transition);
		border: 2px solid var(--primary);
		position: relative;
		overflow: hidden;
		z-index: 1;
	}

	.btn::before {
		content: "";
		position: absolute;
		top: 0;
		left: 0;
		width: 0%;
		height: 100%;
		background: var(--dark);
		transition: var(--transition);
		z-index: -1;
	}

	.btn:hover::before {
		width: 100%;
	}

	.btn:hover {
		color: var(--primary);
		border-color: var(--primary);
	}

	/* Tarjetas de proyectos */
	.project-card {
		border-radius: 16px;
		overflow: hidden;
		background: rgba(15, 23, 42, 0.6);
		backdrop-filter: blur(10px);
		border: 1px solid rgba(99, 102, 241, 0.2);
		transition: var(--transition);
		position: relative;
		height: 100%;
	}

	.project-card:hover {
		transform: translateY(-10px);
		border-color: var(--primary);
		box-shadow: 0 20px 30px rgba(99, 102, 241, 0.2);
	}

	.project-image {
		height: 250px;
		overflow: hidden;
		position: relative;
	}

	.project-image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		transition: var(--transition);
	}

	.project-card:hover .project-image img {
		transform: scale(1.1);
	}

	.project-content {
		padding: 1.5rem;
	}

	.project-title {
		font-size: 1.5rem;
		font-weight: 700;
		margin-bottom: 1rem;
	}

	.project-description {
		color: var(--gray);
		margin-bottom: 1.5rem;
	}

	.project-technologies {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
		margin-top: 1rem;
	}

	.tech-badge {
		background: rgba(99, 102, 241, 0.1);
		color: var(--primary);
		padding: 0.3rem 0.8rem;
		border-radius: 50px;
		font-size: 0.85rem;
		border: 1px solid var(--primary);
	}

	/* Timeline de experiencia */
	.timeline {
		position: relative;
		padding-left: 30px;
	}

	.timeline::before {
		content: "";
		position: absolute;
		left: 7px;
		top: 5px;
		height: 95%;
		width: 2px;
		background: var(--primary);
	}

	.timeline-item {
		position: relative;
		margin-bottom: 2.5rem;
	}

	.timeline-item::before {
		content: "";
		position: absolute;
		left: -30px;
		top: 5px;
		width: 16px;
		height: 16px;
		border-radius: 50%;
		background: var(--primary);
		border: 3px solid var(--dark);
	}

	.timeline-period {
		font-weight: 600;
		color: var(--primary);
		margin-bottom: 0.5rem;
	}

	.timeline-position {
		font-size: 1.25rem;
		font-weight: 700;
		margin-bottom: 0.75rem;
	}

	/* Formulario de contacto */
	.contact-form .form-group {
		margin-bottom: 1.5rem;
		position: relative;
	}

	.contact-form input,
	.contact-form textarea {
		width: 100%;
		padding: 1rem;
		background: rgba(15, 23, 42, 0.5);
		border: 1px solid rgba(99, 102, 241, 0.2);
		border-radius: 8px;
		color: var(--light);
		font-size: 1rem;
		transition: var(--transition);
	}

	.contact-form input:focus,
	.contact-form textarea:focus {
		outline: none;
		border-color: var(--primary);
		box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.2);
	}

	.contact-form label {
		position: absolute;
		top: 1rem;
		left: 1rem;
		color: var(--gray);
		pointer-events: none;
		transition: var(--transition);
	}

	.contact-form input:focus + label,
	.contact-form input:not(:placeholder-shown) + label,
	.contact-form textarea:focus + label,
	.contact-form textarea:not(:placeholder-shown) + label {
		top: -0.8rem;
		left: 0.5rem;
		font-size: 0.8rem;
		background: var(--dark);
		padding: 0 0.5rem;
		color: var(--primary);
	}
</style>

<Layout title="Pablo Andrada | FullStack Web Developer">
	<!-- Fondo de partículas -->
	<div class="particles-bg" id="particles-bg">
		<script>
			// Script para crear partículas dinámicas
			document.addEventListener("DOMContentLoaded", () => {
				const particlesBg = document.getElementById("particles-bg");
				const particleCount = 30;

				for (let i = 0; i < particleCount; i++) {
					const particle = document.createElement("div");
					particle.classList.add("particle");

					// Tamaño y posición aleatoria
					const size = Math.random() * 10 + 5;
					const posX = Math.random() * 100;
					const posY = Math.random() * 100;
					const animationDelay = Math.random() * 10;

					particle.style.width = `${size}px`;
					particle.style.height = `${size}px`;
					particle.style.left = `${posX}%`;
					particle.style.top = `${posY}%`;
					particle.style.animationDelay = `${animationDelay}s`;

					particlesBg.appendChild(particle);
				}
			});
		</script>
	</div>

	<!-- Barra de navegación -->
	<Navbar />

	<!-- Sección Hero -->
	<section
		id="hero"
		class="min-h-screen flex items-center relative overflow-hidden">
		<div class="container text-center">
			<div class="max-w-3xl mx-auto">
				<h1 class="text-5xl md:text-7xl font-bold mb-6 animate-fadeIn">
					Hola, soy <span
						class="text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-indigo-600"
						>Pablo Andrada</span
					>
				</h1>
				<p
					class="text-xl md:text-2xl text-gray-300 mb-10 animate-fadeIn delay-100">
					Desarrollador Full Stack especializado en crear soluciones digitales
					impactantes
				</p>
				<div class="animate-fadeIn delay-300">
					<a href="#projects" class="btn mr-4">Ver proyectos</a>
					<a
						href="#contact"
						class="btn bg-transparent border-white hover:border-indigo-500"
						>Contacto</a
					>
				</div>
			</div>
		</div>

		<!-- Flecha de desplazamiento -->
		<a
			href="#about"
			class="absolute bottom-10 left-1/2 transform -translate-x-1/2 animate-bounce">
			<svg
				xmlns="http://www.w3.org/2000/svg"
				class="h-8 w-8 text-indigo-500"
				fill="none"
				viewBox="0 0 24 24"
				stroke="currentColor">
				<path
					stroke-linecap="round"
					stroke-linejoin="round"
					stroke-width="2"
					d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
			</svg>
		</a>
	</section>

	<!-- Sección Sobre Mí -->
	<section id="about" class="section">
		<div class="container">
			<h2 class="section-title animate-fadeIn">Sobre Mí</h2>

			<div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
				<div class="animate-fadeIn delay-100">
					<div
						class="bg-slate-800/50 backdrop-blur-sm rounded-xl p-8 border border-slate-700/50">
						<h3 class="text-2xl font-bold mb-6 text-indigo-400">
							Mi Experiencia
						</h3>

						<div class="timeline">
							{
								EXPERIENCE.map((exp, index) => (
									<div
										class="timeline-item animate-fadeIn"
										style={`animation-delay: ${0.2 * index}s`}>
										<div class="timeline-period">{exp.period}</div>
										<div class="timeline-position">{exp.position}</div>
										<p class="text-gray-300">{exp.description}</p>
									</div>
								))
							}
						</div>
					</div>
				</div>

				<div class="animate-fadeIn delay-200">
					<div
						class="bg-slate-800/50 backdrop-blur-sm rounded-xl p-8 border border-slate-700/50 h-full">
						<h3 class="text-2xl font-bold mb-6 text-indigo-400">
							Mis Habilidades
						</h3>

						<div class="grid grid-cols-2 md:grid-cols-3 gap-4">
							<div
								class="bg-slate-900/50 p-4 rounded-lg border border-slate-800 hover:border-indigo-500 transition-all">
								<div class="text-indigo-500 font-bold mb-2">Frontend</div>
								<ul class="text-gray-300 text-sm">
									<li>React</li>
									<li>JavaScript</li>
									<li>HTML5/CSS3</li>
									<li>TailwindCSS</li>
								</ul>
							</div>

							<div
								class="bg-slate-900/50 p-4 rounded-lg border border-slate-800 hover:border-indigo-500 transition-all">
								<div class="text-indigo-500 font-bold mb-2">Backend</div>
								<ul class="text-gray-300 text-sm">
									<li>Node.js</li>
									<li>Express</li>
									<li>PostgreSQL</li>
									<li>MongoDB</li>
								</ul>
							</div>

							<div
								class="bg-slate-900/50 p-4 rounded-lg border border-slate-800 hover:border-indigo-500 transition-all">
								<div class="text-indigo-500 font-bold mb-2">DevOps</div>
								<ul class="text-gray-300 text-sm">
									<li>Git</li>
									<li>Vercel</li>
									<li>CI/CD</li>
									<li>Docker</li>
								</ul>
							</div>
						</div>

						<div class="mt-8">
							<h4 class="text-xl font-bold mb-4 text-indigo-400">Educación</h4>
							<div class="mb-4">
								<div class="font-bold">
									Licenciatura en Ciencias de la Computación
								</div>
								<div class="text-gray-300">FAMAF, UNC (2024 - Presente)</div>
							</div>
							<div>
								<div class="font-bold">Desarrollador Full Stack</div>
								<div class="text-gray-300">HENRY Academy (2023)</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Sección Proyectos -->
	<section id="projects" class="section bg-slate-900/30">
		<div class="container">
			<h2 class="section-title animate-fadeIn">Proyectos Destacados</h2>

			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
				{
					PROJECTS.map((project, index) => (
						<div
							class="project-card animate-fadeIn"
							style={`animation-delay: ${0.2 * index}s`}>
							<div class="project-image">
								<img src={project.urlImg} alt={project.title} />
							</div>
							<div class="project-content">
								<h3 class="project-title">{project.title}</h3>
								<p class="project-description">{project.description}</p>

								<div class="project-technologies">
									{project.technologies.map((tech) => (
										<span class="tech-badge">{tech}</span>
									))}
								</div>

								<a
									href={project.link}
									target="_blank"
									class="btn mt-4 w-full text-center">
									Ver Proyecto
								</a>
							</div>
						</div>
					))
				}
			</div>
		</div>
	</section>

	<!-- Sección Contacto -->
	<section id="contact" class="section">
		<div class="container">
			<h2 class="section-title animate-fadeIn">Contáctame</h2>

			<div
				class="max-w-2xl mx-auto bg-slate-800/50 backdrop-blur-sm rounded-xl p-8 border border-slate-700/50">
				<form class="contact-form">
					<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
						<div class="form-group animate-fadeIn delay-100">
							<input type="text" id="name" placeholder=" " required />
							<label for="name">Nombre</label>
						</div>

						<div class="form-group animate-fadeIn delay-200">
							<input type="email" id="email" placeholder=" " required />
							<label for="email">Email</label>
						</div>
					</div>

					<div class="form-group animate-fadeIn delay-300">
						<input type="text" id="subject" placeholder=" " required />
						<label for="subject">Asunto</label>
					</div>

					<div class="form-group animate-fadeIn delay-400">
						<textarea id="message" rows="5" placeholder=" " required></textarea>
						<label for="message">Mensaje</label>
					</div>

					<div class="text-center animate-fadeIn delay-500">
						<button type="submit" class="btn px-10 py-3">
							Enviar Mensaje
						</button>
					</div>
				</form>
			</div>
		</div>
	</section>

	<Footer />

	<!-- Script para animaciones al hacer scroll -->
	<script>
		// Observador de intersección para animaciones
		document.addEventListener("DOMContentLoaded", () => {
			const observer = new IntersectionObserver(
				(entries) => {
					entries.forEach((entry) => {
						if (entry.isIntersecting) {
							entry.target.classList.add("animate-fadeIn");
						}
					});
				},
				{ threshold: 0.1 }
			);

			document.querySelectorAll(".animate-fadeIn").forEach((el) => {
				observer.observe(el);
			});

			// Scroll suave para enlaces internos
			document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
				anchor.addEventListener("click", function (e) {
					e.preventDefault();
					const targetId = this.getAttribute("href");
					const targetElement = document.querySelector(targetId);

					if (targetElement) {
						window.scrollTo({
							top: targetElement.offsetTop - 80,
							behavior: "smooth",
						});
					}
				});
			});
		});
	</script>
</Layout>
